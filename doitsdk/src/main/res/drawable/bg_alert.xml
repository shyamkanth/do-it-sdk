<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent Background -->
    <item android:bottom="0dp" android:top="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent background -->
        </shape>
    </item>

    <!-- Rounded Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black_bg_alert"/> <!-- Your alert background color -->
            <corners android:radius="15dp"/> <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>
